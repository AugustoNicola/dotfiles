#!/bin/bash
#requires plymouth-x11 installed
#sudo apt-get install plymouth-x11
echo
echo "Running 5-second debug test..."
echo "Creates /usr/share/plymouth/themes/circle/debug.log for debugging"
sudo plymouthd --debug --debug-file=/usr/share/plymouth/themes/circle/debug.log; sudo plymouth --show-splash ; for ((I=0; I<40; I++)); do sleep 1 ; sudo plymouth --update=test$I ; done ; sudo plymouth --quit
exit
